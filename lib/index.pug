doctype html
html
    head
        title= title
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css')
    body
        .container.mx-auto.p-4
            .row
                .col-md-12
                    h1.text-4xl.font-bold.mb-4= title
                    p.text-lg.text-gray-700.mb-4 Documentation Links
                    .flex.flex-col.gap-4
                        each dir in dirs
                            .bg-gray-100.shadow-md.rounded-lg.p-4
                                a.text-blue-500(href='./' + dir)= dir
